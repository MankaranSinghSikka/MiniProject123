@model SharingEconomyPlatform.Models.Product
    @using SharingEconomyPlatform.Models;
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var CategoryList = new ApplicationDbContext().Categories.ToList();
    var _con = new ApplicationDbContext();


}

<h2>Detail</h2>

@using (Html.BeginForm("EdditDetailsP", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Add New Product in your Repository</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Category, new { @class = "col-md-2 control-label"  })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Category, new SelectList(CategoryList.Select(m => m.Name)), "Select", new { @class = "form-control"})
            @Html.ActionLink("Add Category", "Category", "Home")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @Value = Model.Name } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AvailableLocation, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.AvailableLocation, new { htmlAttributes = new { @class = "form-control" , @Value = Model.AvailableLocation} })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", @Value = Model.Price } })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.Stock, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Stock, new { htmlAttributes = new { @class = "form-control", @Value = Model.Stock } })
        </div>
    </div>
    <div class="hidden">
        @Html.EditorFor(m => m.Vendor, new { htmlAttributes = new { @class = "form-control", @Value = Model.Vendor } })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}
